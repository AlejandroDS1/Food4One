<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:background="@color/black"
    tools:context=".View.MainScreen.MainScreenFragments.Coleccion.ColeccionFragment">

    <LinearLayout
        android:id="@+id/linearContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:text="Esto es coleccion"
        android:textAlignment="center"
        android:textColor="@color/black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/navegationCollectionFragments"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginRight="40dp"
                app:menu="@menu/tabs_collection"
                android:background="@drawable/tab_collectionsbackground"
                android:elevation="15dp"
                app:itemIconSize="33dp"
                app:itemRippleColor="@android:color/transparent"
                app:labelVisibilityMode="unlabeled"/>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/containerFragmentCollection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp">
        </FrameLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>