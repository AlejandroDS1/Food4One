<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".View.MainScreen.MainScreenFragments.Coleccion.AllListsFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"

        android:layout_marginVertical="15dp"

        android:text="Todas tus listas"
        android:textSize="22sp"
        android:textColor="@color/orange">

    </TextView>

    <TextView
        android:id="@+id/emptyList_notifyer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:visibility="gone"
        android:layout_marginTop="30dp"
        android:layout_marginVertical="30dp"

        android:gravity="center"

        android:text="Tus listas apareceran aqui"
        android:textSize="25sp"
        android:textColor="@color/orange"

        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_allLists"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>