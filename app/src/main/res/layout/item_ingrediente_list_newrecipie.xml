<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardView_newRecipe"
    android:layout_marginVertical="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@android:color/black"
        android:layout_height="wrap_content"
        android:paddingVertical="3dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_ingrediente_newRecipe"
            android:layout_width="330dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/ingredienteList_name_newRecipe"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical|left"
                android:text="Ingrediente de prueba"
                android:textColor="@color/white"
                android:textSize="18sp">

            </TextView>

            <TextView
                android:id="@+id/cantidadymagnitud_newRecipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:text="100.00"
                android:textColor="@color/white"
                android:textSize="18sp">

            </TextView>

        </LinearLayout>

        <TextView
            android:id="@+id/trashCan_newRecipe"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginHorizontal="10dp"
            android:background="@android:drawable/ic_menu_delete">

        </TextView>
    </LinearLayout>

</androidx.cardview.widget.CardView>