<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardView_newRecipe"
    android:backgroundTint="@color/black"
    android:layout_marginVertical="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_ingrediente_newRecipe"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ingredienteList_name_newRecipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Nombre ingrediente"
            android:textColor="@color/white"
            android:textSize="16sp"

            android:gravity="center_vertical"

            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_weight="4"
            >

        </TextView>

        <TextView
            android:id="@+id/cantidadymagnitud_newRecipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:ems="7"
            android:text="000.00"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_weight="7"
            android:gravity="center"
            android:layout_gravity="center"
            >

        </TextView>
        <TextView
            android:id="@+id/trashCan_newRecipe"
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:background="@android:drawable/ic_menu_delete">
        </TextView>

    </LinearLayout>

</androidx.cardview.widget.CardView>