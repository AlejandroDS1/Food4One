<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.MainScreen.MainScreenFragments.NewRecipe.NewRecipeFragment">

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/backText"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/flechag"
            />

        <TextView
            android:id="@+id/newRecipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Recipe"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/editTextTextNomRecipe"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:ems="10"
            android:textColor="@color/black"
            android:text="Nombre de la receta" />

        <EditText
            android:id="@+id/editTextListIngredients"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:ems="10"
            android:textColor="@color/black"
            android:text="Indica los ingredientes uno a uno" />

        <TextView
            android:id="@+id/textFoto"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:text="Inserta la imagen de la receta" />

        <Button
            android:id="@+id/guardarRecipe"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:text="Guardar receta" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>